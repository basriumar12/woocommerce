<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1dip" /> <!--optional-->

            <gradient
                android:angle="0"
                android:endColor="@color/layoutBackgroundDark"
                android:startColor="@color/layoutBackgroundDark" />

        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1dip" /> <!--optional-->

                <gradient
                    android:angle="0"
                    android:endColor="#ffcc00"
                    android:centerColor="#ffdb4d"
                    android:startColor="#ffeb99" />

            </shape>
        </clip>
    </item>

</layer-list>