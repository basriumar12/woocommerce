<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/category_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/layoutBackgroundLight" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textColor="@color/textColorSecondaryDark"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/category_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textAlignment="viewStart"
                android:textColor="@color/textColorSecondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <com.vectorcoder.androidwoocommerce.customs.CircularImageView
            android:id="@+id/category_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            app:border_width="0dp"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>


    <com.vectorcoder.androidwoocommerce.customs.CustomListView
        android:id="@+id/sub_categories_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:dividerHeight="1dp"
        android:divider="@color/dividerLight"
        android:background="@color/white" />


</LinearLayout>